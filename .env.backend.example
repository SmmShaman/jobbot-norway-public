# JobBot Norway - Backend Environment Variables
# Copy this file to backend/.env and fill in your values

# ============================================
# SUPABASE
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key_here
SUPABASE_JWT_SECRET=your_jwt_secret_here

# ============================================
# AZURE OPENAI (Already configured)
# ============================================
AZURE_OPENAI_ENDPOINT=https://elvarika.openai.azure.com
AZURE_OPENAI_KEY=your_azure_openai_key_here
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# ============================================
# SKYVERN (Form Filling)
# ============================================
SKYVERN_API_URL=http://localhost:8000
SKYVERN_API_KEY=
SKYVERN_HEADLESS=false

# ============================================
# SECURITY
# ============================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
ENCRYPTION_KEY=generate_random_32_char_hex_string
JWT_SECRET=generate_random_secret_here

# ============================================
# TELEGRAM (Optional)
# ============================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_DEFAULT_CHAT_ID=

# ============================================
# APPLICATION SETTINGS
# ============================================
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=development

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================
# SCRAPING SETTINGS
# ============================================
# User agent for web scraping
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Rate limiting (requests per minute)
SCRAPING_RATE_LIMIT=30

# ============================================
# DATABASE SETTINGS (if using local PostgreSQL too)
# ============================================
# DATABASE_URL=postgresql://user:password@localhost:5432/jobbot

# ============================================
# MONITORING (Optional)
# ============================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
